<Window x:Class="AMG_mIoT_AutoInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:local="clr-namespace:AMG_mIoT_AutoInstaller.Converters"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Title="AMG-mIoT Auto Installer"
        Height="700"
        Width="1200"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True"
        Background="Transparent"
        SizeChanged="Window_SizeChanged"
        Icon="{StaticResource AppIcon}">

    <Window.Resources>
        <!-- Converter for comparing SelectedSection with Button.Tag -->
        <local:EqualityMultiConverter x:Key="EqualityMultiConverter"/>

        <!-- Reusable Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle"
                TargetType="Button">
            <!-- Default Appearance -->
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Margin"
                    Value="5"/>
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Left"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
               
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderThickness="0.5"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Effect -->
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#0FFFFFFF"/>

                                <Setter Property="Foreground"
                                        Value="White"/>
                                <Setter TargetName="border"
                                    Property="BorderBrush"
                                        Value="#AAFFFFFF" />


                            </Trigger>
                            <!-- Pressed Effect -->
                            <Trigger Property="IsPressed"
                                    Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#CCFFFFFF"/>
                                <Setter Property="Foreground"
                                        Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- Selected State Trigger -->
            <Style.Triggers>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource EqualityMultiConverter}">
                            <!-- Change the binding to use DataContext instead of RelativeSource -->
                            <Binding Path="SelectedSection"/>
                            <Binding RelativeSource="{RelativeSource Self}"
                                    Path="Tag"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter 
                        Property="Background"
                            Value="#DDFFFFFF"/>
                    <Setter
                        Property="Foreground"
                            Value="Black"
                        />
                    
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Configure WindowChrome for custom non-client area -->
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome
            CaptionHeight="40"
            ResizeBorderThickness="6"
            CornerRadius="{x:Static SystemParameters.WindowCornerRadius}"
            GlassFrameThickness="1,0,1,1"
            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <!-- Root Grid with a dynamic rounded-rectangle clip -->
    <Grid x:Name="MainGrid"
            ClipToBounds="True"
            Background="{StaticResource AccentBrush}">
        
        <!-- We apply the clip in code-behind on SizeChanged -->
        <Border   CornerRadius="10"
                SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Custom Title Bar -->
                    <RowDefinition Height="40"/>
                    <!-- Main Content Area -->
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Custom Title Bar -->
                <DockPanel Grid.Row="0"
                        Background="{StaticResource AccentBrush}"
                           shell:WindowChrome.IsHitTestVisibleInChrome="True"
                           DockPanel.LastChildFill="False"
                           MouseDown="TitleBar_MouseDown">
                    <!-- Application Title (aligned to left) -->
                    <TextBlock Text="AMG-mIoT Installer"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <!-- Window Control Buttons (in a StackPanel) -->
                    <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            DockPanel.Dock="Right">
                        <!-- Minimize Button -->
                        <Button 
                                Width="40"
                                Height="30"
                                Click="MinimizeButton_Click"
                                Margin="0,5,5,5">
                            <fa:FontAwesome Icon="WindowMinimize" 
                        FontSize="12"/>
                        </Button>
                        <!-- Maximize/Restore Button -->
                        <Button 
                                Width="40"
                                Height="30"
                                Click="MaximizeRestoreButton_Click"
                                Margin="0,5,5,5">
                            <fa:FontAwesome Icon="WindowMaximize"
                        FontSize="12"/>
                        </Button>
                        <!-- Close Button -->
                        <Button 
                                Width="40"
                                Height="30"
                                Click="CloseButton_Click"
                                Margin="0,5,10,5">
                            <fa:FontAwesome Icon="Times"
                        FontSize="14"/>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <!-- Main Content Grid -->
                <Grid Grid.Row="1" Background="{StaticResource AccentBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sidebar -->
                    <Border Background="{StaticResource AccentBrush}"
                            CornerRadius="0,0,0,10">
                        <StackPanel Margin="10"
                                Orientation="Vertical">
                            <Button Content="Install"
                                    Command="{Binding NavigateToInstallCommand}"
                                    Tag="Install"
                                    Style="{StaticResource SidebarButtonStyle}"/>
                            <Button Content="Manage"
                                    Command="{Binding NavigateToManageCommand}"
                                    Tag="Manage"
                                    Style="{StaticResource SidebarButtonStyle}"/>
                            <Button Content="Update"
                                    Command="{Binding NavigateToUpdateCommand}"
                                    Tag="Update"
                                    Style="{StaticResource SidebarButtonStyle}"/>
                            <Button Content="Settings"
                                    Command="{Binding NavigateToSettingsCommand}"
                                    Tag="Settings"
                                    Style="{StaticResource SidebarButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Content Area -->
                    <Border Grid.Column="1"
                            Background="{StaticResource AccentBrush}"
                            CornerRadius="10,0,0,0">
                        <ContentControl Content="{Binding CurrentView}"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
