<Application x:Class="AMG_mIoT_AutoInstaller.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:AMG_mIoT_AutoInstaller.Views"
             Startup="Application_Startup"
             ThemeMode="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="AccentBrush"
                    Color="#1E1E2E"/>
            <!-- Dark muted blue-gray -->
            <SolidColorBrush x:Key="AccentLightBrush"
                    Color="#3A3A4A"/>
            <!-- Subtle dark grayish blue -->
            <SolidColorBrush x:Key="AccentDarkBrush"
                    Color="#12121A"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <!-- Almost black with a hint of blue -->
            <BitmapImage x:Key="AppIcon"
                    UriSource="pack://application:,,,/Resources/installerlogo.png"/>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>