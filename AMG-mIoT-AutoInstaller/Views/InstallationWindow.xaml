<Window x:Class="AMG_mIoT_AutoInstaller.Views.InstallationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:AMG_mIoT_AutoInstaller.ViewModels"
        Title="Installation Log" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:InstallWizardViewModel/>
    </Window.DataContext>
    <Grid Background="#FF2D2D30">
        
        <ListBox ItemsSource="{Binding InstallationLog}"
                 Margin="10"
                 Background="#FF1E1E1E"
                 Foreground="#FF61D6D6"
                 FontFamily="Consolas"
                 FontSize="14"
                 BorderThickness="0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF3E3E42"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>