<UserControl x:Class="AMG_mIoT_AutoInstaller.Views.WizardStep3View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AMG_mIoT_AutoInstaller.ViewModels" 
             xmlns:converters="clr-namespace:AMG_mIoT_AutoInstaller.Converters"
             Background="#FFFFFF">
    <UserControl.DataContext>
        <vm:InstallWizardViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <!-- Modern Button Style -->
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#2563EB"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="24,12"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" 
                                            ShadowDepth="2" 
                                            Direction="270" 
                                            Color="#1F2937" 
                                            Opacity="0.1"/>
                        </Border.Effect>
                        <ContentPresenter x:Name="contentPresenter" 
                                        ContentTemplate="{TemplateBinding ContentTemplate}" 
                                        Content="{TemplateBinding Content}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            <Setter TargetName="border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="12" 
                                                    ShadowDepth="0" 
                                                    Color="#2563EB" 
                                                    Opacity="0.3"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                            <Setter Property="Foreground" Value="#9CA3AF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Modern Expander Style -->
<Style x:Key="ModernExpanderStyle" TargetType="Expander">
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Expander">
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!-- Header -->
                        <Border x:Name="HeaderBorder" 
                                Background="Transparent"
                                Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <!-- Header Content -->
                                <ContentPresenter ContentSource="Header" 
                                                Grid.Column="0"/>
                                <!-- Toggle Button -->
                                <ToggleButton Grid.Column="1"
                                            IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            VerticalAlignment="Center"
                                            Margin="8,0,0,0">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border Background="Transparent" 
                                                    Width="24" 
                                                    Height="24">
                                                <Path x:Name="Arrow"
                                                      Fill="#6B7280"
                                                      Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                                                      Stretch="Uniform"
                                                      Width="12"
                                                      Height="12"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Arrow" Property="RenderTransform">
                                                        <Setter.Value>
                                                            <RotateTransform Angle="180"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                            </Grid>
                        </Border>
                        <!-- Content -->
                        <Border x:Name="ContentBorder" 
                                Grid.Row="1"
                                Visibility="Collapsed">
                            <ContentPresenter/>
                        </Border>
                    </Grid>
                </Border>
                <ControlTemplate.Triggers>
                    <Trigger Property="IsExpanded" Value="True">
                        <Setter TargetName="ContentBorder" Property="Visibility" Value="Visible"/>
                    </Trigger>
                </ControlTemplate.Triggers>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

        <!-- Modern Drop Shadow Effect -->
        <DropShadowEffect x:Key="ModernShadow" 
                         BlurRadius="8" 
                         ShadowDepth="2" 
                         Direction="270" 
                         Color="#1F2937" 
                         Opacity="0.1"/>

        
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Margin="0,0,0,24">
            <TextBlock Text="Installation Summary" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#111827"/>
            <TextBlock Text="Review the installation progress for each component"
                      FontSize="16"
                      Foreground="#6B7280"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Components List with Logs -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ComponentsToInstall}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="#E5E7EB"
                                Margin="0,0,0,0"
                                Effect="{StaticResource ModernShadow}">
                            <Expander Style="{StaticResource ModernExpanderStyle}"
                                    IsExpanded="False">
                                <Expander.Header>
                                    <DockPanel  DockPanel.LastChildFill="False" Margin="8">
                                        <TextBlock Text="{Binding Name}" 
                                                FontWeight="SemiBold"
                                                FontSize="16"
                                                Foreground="#111827"
                                                VerticalAlignment="Center"/>
                                        <StackPanel DockPanel.Dock="Right" 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right" 
                                                Margin="16,0,0,0">
                                            <Border CornerRadius="16"

                                                    Padding="12,6"
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                    BorderThickness="1"
                                                    BorderBrush="#BFDBFE">
                                                <TextBlock Text="{Binding Status}" 
                                                        FontSize="14"
                                                        FontWeight="Medium"
                                                        Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        
                                    </DockPanel>
                                </Expander.Header>
                                <Border Background="#1E293B" 
                                        CornerRadius="8"
                                        MaxHeight="300"
                                        Margin="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl ItemsSource="{Binding InstallationLogs}"
                                                    Margin="16">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                            Foreground="#94A3B8"
                                                            FontFamily="Cascadia Code, Consolas"
                                                            FontSize="14"
                                                            Margin="0,4"
                                                            TextWrapping="Wrap"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Expander>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
                         
        </ScrollViewer>

        <!-- Action Buttons and Progress -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            

            <!-- Navigation Buttons -->
            <Button Grid.Column="1"
                    Content="Previous"
                    Command="{Binding PreviousCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#F3F4F6"
                    Foreground="#374151"
                    Width="120"
                    Margin="0,0,16,0"/>
            
            <Button Grid.Column="2"
                    Content="Install"
                    Command="{Binding StartInstallationCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="120"/>
        </Grid>
    </Grid>
</UserControl>