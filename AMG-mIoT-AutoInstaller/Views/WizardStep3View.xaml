<UserControl x:Class="AMG_mIoT_AutoInstaller.Views.WizardStep3View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AMG_mIoT_AutoInstaller.ViewModels" 
             xmlns:converters="clr-namespace:AMG_mIoT_AutoInstaller.Converters"
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Margin="0,0,0,24">
            <TextBlock Text="Installation Summary" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#111827"/>
            <TextBlock Text="Review the installation progress for each component"
                      FontSize="16"
                      Foreground="#6B7280"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Components List with Logs -->
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Disabled">
            <ItemsControl ItemsSource="{Binding ComponentsToInstall}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" 
                                CornerRadius="12"
                                BorderThickness="1"
                                BorderBrush="#E5E7EB"
                                Margin="0,0,0,0"
                                Effect="{StaticResource ModernShadow}">
                            <Expander Style="{StaticResource ModernExpanderStyle}"
                                    IsExpanded="False">
                                <Expander.Header>
                                    <DockPanel  DockPanel.LastChildFill="False" Margin="8">
                                        <TextBlock Text="{Binding Name}" 
                                                FontWeight="SemiBold"
                                                FontSize="16"
                                                Foreground="#111827"
                                                VerticalAlignment="Center"/>
                                        <StackPanel DockPanel.Dock="Right" 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Right" 
                                                Margin="16,0,0,0">
                                            <Border CornerRadius="16"

                                                    Padding="12,6"
                                                    Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                                    BorderThickness="1"
                                                    BorderBrush="#BFDBFE">
                                                <TextBlock Text="{Binding Status}" 
                                                        FontSize="14"
                                                        FontWeight="Medium"
                                                        Foreground="White"/>
                                            </Border>
                                        </StackPanel>
                                        
                                    </DockPanel>
                                </Expander.Header>
                                <Border Background="#1E293B" 
                                        CornerRadius="8"
                                        MaxHeight="300"
                                        Margin="8">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl ItemsSource="{Binding InstallationLogs}"
                                                    Margin="16">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                            Foreground="#94A3B8"
                                                            FontFamily="Cascadia Code, Consolas"
                                                            FontSize="14"
                                                            Margin="0,4"
                                                            TextWrapping="Wrap"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </Expander>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
                         
        </ScrollViewer>

        <!-- Action Buttons and Progress -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            

            <!-- Navigation Buttons -->
            <Button Grid.Column="1"
                    Content="Previous"
                    Command="{Binding PreviousCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Background="#F3F4F6"
                    Foreground="#374151"
                    Width="120"
                    Margin="0,0,16,0"/>
            
            <Button Grid.Column="2"
                    Content="Install"
                    Command="{Binding StartInstallationCommand}"
                    Style="{StaticResource ModernButtonStyle}"
                    Width="120"/>
        </Grid>
    </Grid>
</UserControl>