<!-- File: Views/WizardStep1View.xaml -->
<UserControl x:Class="AMG_mIoT_AutoInstaller.Views.WizardStep1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:AMG_mIoT_AutoInstaller.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="WhiteSmoke">
    <UserControl.DataContext>
        <vm:InstallWizardViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <Style x:Key="ButtonStyle"
               TargetType="Button">
            <Setter Property="Background"
                    Value="#007ACC"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled"
                         Value="False">
                    <Setter Property="Background"
                            Value="#CCCCCC"/>
                </Trigger>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#005999"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Grid.Column="1"
        CornerRadius="10,0,0,0">
        
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Title -->
        <TextBlock Text="Step 1: Select Components"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"/>

        <!-- List of components -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding SelectedComponents}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,10"
                                Padding="10"
                                BorderBrush="#CCC"
                                BorderThickness="1"
                                CornerRadius="5"
                                Background="White">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          VerticalAlignment="Center"
                                          Margin="0,0,10,0"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               Foreground="#333"/>
                                    <TextBlock Text="{Binding Description}"
                                               Foreground="#666"
                                               FontSize="12"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Next"
                    Command="{Binding NextCommand}"
                    Style="{StaticResource ButtonStyle}"
                    Width="100"
                    Height="35"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
       </Border>
</UserControl>
